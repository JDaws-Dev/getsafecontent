# Convex
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# Convex Auth (set these on Convex dashboard under Settings → Environment Variables)
# AUTH_GOOGLE_ID=       # Google OAuth client ID
# AUTH_GOOGLE_SECRET=   # Google OAuth client secret
# SITE_URL=             # e.g. https://getsafereads.com (for OAuth callbacks)

# OpenAI
OPENAI_API_KEY=

# Google Books (optional — works without key but with lower rate limits)
GOOGLE_BOOKS_API_KEY=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=              # Price ID for $2.99/mo subscription
NEXT_PUBLIC_APP_URL=           # e.g. https://getsafereads.com

# DoesTheDogDie (optional — enriches reviews with community trigger warnings)
# Get a free API key at https://www.doesthedogdie.com/api
DOES_THE_DOG_DIE_API_KEY=

# Amazon Associates (optional — appends affiliate tag to Amazon links)
NEXT_PUBLIC_AMAZON_AFFILIATE_TAG=
